{
  "name": "malta",
  "version": "0.0.12",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "npm run build",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --coverage",
    "coverage": "codecov --token=a6047fcd-bff1-49b8-9d1d-adb91e6f9859",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --output-dir docs"
  },
  "dependencies": {
    "grid-styled": "^4.1.0",
    "react": "^16.0.0",
    "react-dom": "16.0.0",
    "react-select": "^2.0.0-beta.2",
    "styled-components": "^3.2.5",
    "styled-system": "^2.2.5"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-info": "^3.4.3",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addon-storyshots": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "@types/grid-styled": "^4.1.0",
    "@types/jest": "^22.2.3",
    "@types/react": "16.0.20",
    "@types/react-dom": "^16.0.2",
    "@types/react-test-renderer": "^16.0.1",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-info": "^3.2.3",
    "@types/storybook__react": "^3.0.7",
    "awesome-typescript-loader": "^4.0.0",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "codecov": "^3.0.2",
    "husky": "^1.0.0-rc.3",
    "jest": "^22.4.3",
    "react-test-renderer": "^16.3.2",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build-storybook && npm run build"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "files": [
    "dist"
  ]
}
